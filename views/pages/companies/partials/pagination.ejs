<div class="row">
    <div class="col">
        <p>Wynik√≥w <%- companies.length %> na <%- resultsCount %></p>
    </div>
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <% for(let i=1; i<=pagesCount; i++) {%>
            <li class="page-item  <%- i==page ? 'active' : ''%>">
                <a class="page-link" 
                    href="#"
                    data-page="<%= i%>"><%= i%>
                </a>
            </li>
        <% } %>
    </ul>
</nav>
<script>
    const changePage = e => {
        e.preventDefault();
        const search = new URLSearchParams(window.location.search);
        search.set('page', e.target.dataset.page);
        const url = window.location.origin + window.location.pathname + '?' + search.toString();
        window.location.href = url;
    }

    document.querySelectorAll('.pagination .page-link').forEach(e => {
        e.addEventListener('click', changePage);
    })
</script>