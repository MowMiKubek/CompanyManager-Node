<h1>Logowanie</h1>

<form method="POST">
    <div class="form-group mb-2">
        <label for="email">Logowanie</label>
        <input type="text" 
            id="email" 
            name="email" 
            placeholder="nazwa@domena.xx" 
            class="form-control"
            <% if (form) {%>
                value="<%= form.email%>"
            <% } %>
        required>
    </div>
        <div class="form-group mb-3">
        <label for="password">Hasło</label>
        <input type="password" 
            id="password" 
            name="password"
            placeholder="Hasło" 
            class="form-control"
            <% if (form) {%>
                value="<%= form.password%>"
            <% } %>
        required>
    </div>

    <% if(errors) {%>
        <div class="alert alert-danger">Błędny email lub hasło</div>
    <% } %>
    <button type="submit" class="btn btn-primary">Zaloguj</button>
</form>